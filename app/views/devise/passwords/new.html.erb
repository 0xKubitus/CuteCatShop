<div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">   
        <h2 class="text-center text-dark mt-5">Forgot your password ?</h2>
        <div class="card my-5">
          <div class="card-body cardbody-color p-lg-5">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post}) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
            <div class="text-center mb-5">
             <%= image_tag("logomini.png", class:'img-fluid profile-image-pic img-thumbnail rounded-circle my-3 w-200px') %>
            </div>
            <div class="field mb-3">
               <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Email" %>
            </div>
            <div class="actions">
            <%= f.submit "Send me reset password instructions", class:"btn btn-color px-5 mb-3 w-100" %>
            </div>
            <div id="emailHelp">
            <%= render "devise/shared/links", class:"form-text text-center mb-5 text-dark"%>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
